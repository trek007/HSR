    <script>
            $(".region").hide();
            $(".foundation").hide();
            $(".school").show();

            $(".topMenuBar").click(function () {
                $(".topMenuBar").removeClass('activeMenu');
                $(this).addClass('activeMenu');
                });

            $("[name='lnkAPM']").click(function () {
                location.href = '@Url.Action("PMHome", "ProgressMonitoring")';
            });

            $("[name='lnkK8']").click(function () {
                location.href = '@Url.Action("Amplify", "K8Assessments")';
            });

            $("[name='lnkHS']").click(function () {
                location.href = '@Url.Action("ACT", "HSAssessments")';
            });

            $("[name='lnkSSD']").click(function () {
                location.href = '@Url.Action("StudentEnrollment", "StudentStaffData")';
            });

            $("[name='lnkSUR']").click(function () {
                location.href = '@Url.Action("TNTP", "Surveys")';
            });

            $("#ReportType").change(function () {
                var selectedVal = $("#ReportType option:selected").val();

                if (selectedVal == 'school') {
                    $(".region").hide();
                    $(".foundation").hide();
                    $(".school").show();
                }
                if (selectedVal == 'region') {
                    $(".region").show();
                    $(".foundation").hide();
                    $(".school").hide();
                }
                if (selectedVal == 'foundation') {
                    $(".region").hide();
                    $(".foundation").show();
                    $(".school").hide();
                }
                //$(this).addClass('activeMenu');
            });

    </script>
